{
  "compilerOptions": {


    "target": "es5",                         
     "outDir": "./dist",                        
     "rootDir": "./src",                     

    "strict": true,                           
     "strictPropertyInitialization": false,  
    "baseUrl": "./src",                      
    "paths": {
      "@modules/*":["modules/*"],
      "@config/*":["config/*"],
      "@shared/*":["shared/*"]
    },                          
    
    "esModuleInterop": true,                 
    
     "experimentalDecorators": true,        
     "emitDecoratorMetadata": true,         
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true  

  }
}
